{
  "expo": {
    "name": "CountG",
    "slug": "countg",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kyoday.countg",
      "infoPlist": {
        "NSLocalNetworkUsageDescription": "Allow CountG to access devices on the local network."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "minSdkVersion": 26,
      "permissions": [
        "INTERNET",
        "ACCESS_WIFI_STATE",
        "CHANGE_WIFI_MULTICAST_STATE",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "versionCode": 2,
      "package": "com.rezendepedro.CounG"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "CountG - Cattle Counting AI",
      "shortName": "CountG",
      "startUrl": "/",
      "display": "standalone",
      "backgroundColor": "#ffffff",
      "themeColor": "#007AFF",
      "description": "CountG app for cattle counting using Artificial Intelligence.",
      "lang": "pt-BR",
      "icons": [
        {
          "src": "./assets/adaptive-icon.png",
          "sizes": "192x192",
          "type": "image/png"
        },
        {
          "src": "./assets/icon.png",
          "sizes": "512x512",
          "type": "image/png",
          "purpose": "any maskable"
        }
      ],
      "preferRelatedApplications": false,
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow CountG to access your camera to record videos.",
          "microphonePermission": "Allow CountG to access your microphone to record audio (optional).",
          "recordAudioAndroid": true
        }
      ],
      "react-native-vlc-media-player",
      "expo-font",
      "expo-sqlite"
    ],
    "assetBundlePatterns": [
      "assets/images/*",
      "assets/fonts/*"
    ],
    "extra": {
      "eas": {
        "projectId": "a46adc85-0390-4ed7-a306-abd542a28655"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/pedrorezp3/a46adc85-0390-4ed7-a306-abd542a28655"
    }
  }
}
